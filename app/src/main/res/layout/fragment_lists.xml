<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lists_fragment_message_text_view"
        style="@style/TextAppearance.Body1.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_lists_error"
        android:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lists_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/lists_fragment_horizontal_spacing"
        android:layout_marginStart="@dimen/lists_fragment_horizontal_spacing"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/screen_vertical_small_spacing"
        android:paddingTop="@dimen/view_all_top_padding" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lists_fragment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_spacing"
        android:layout_marginEnd="@dimen/fab_spacing"
        android:tint="@color/white"
        app:backgroundTint="@color/color_accent"
        app:fabSize="normal"
        app:srcCompat="@drawable/icon_plus" />

</android.support.design.widget.CoordinatorLayout>
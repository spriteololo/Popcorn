<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.epam.ui_demo.MainActivity">

    <Button
        android:id="@+id/navigation_view_demo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_view_demo"
        android:textSize="14sp" />

    <Button
        android:id="@+id/rating_tile_demo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rating_tile_demo"
        android:textSize="14sp" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:transitionName="transitionName" />

        <TextView
            android:id="@+id/textVV"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:text="asdasd"
            android:layout_height="wrap_content"
            android:transitionName="transitionText" />

    </FrameLayout>

</LinearLayout>
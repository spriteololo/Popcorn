<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_main_image_view_switcher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <com.epam.popcornapp.ui.skeleton.SkeletonMainImage
        android:id="@+id/adapter_main_image_skeleton_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.epam.popcornapp.ui.mainViews.MainImageView
        android:id="@+id/adapter_main_photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true" />

</ViewSwitcher>
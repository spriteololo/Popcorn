<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/swimming_lines_header_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/swimming_line_tile_text_view"
            style="@style/TextAppearance.Body2.Primary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            tools:text="Title" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/swimming_line_more_button"
            style="@style/Style.Button.More"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/more" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/swimming_line_tiles_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/swimming_lines_content_height"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/tiles_horizontal_spacing"
        android:paddingStart="@dimen/tiles_horizontal_spacing" />

</merge>
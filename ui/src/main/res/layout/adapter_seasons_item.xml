<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/screen_horizontal_spacing"
    android:layout_marginStart="@dimen/screen_horizontal_spacing"
    android:layout_marginTop="@dimen/adapter_season_vertical_spacing"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/adapter_seasons_image_view"
        android:layout_width="@dimen/small_image_tile_width"
        android:layout_height="@dimen/small_image_tile_height" />

    <TextView
        android:id="@+id/adapter_seasons_name_text_view"
        style="@style/TextAppearance.Subheading.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/text_view_top_spacing"
        android:layout_toEndOf="@+id/adapter_seasons_image_view" />

    <TextView
        android:id="@+id/adapter_seasons_description_text_view"
        style="@style/TextAppearance.Body1.PrimarySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/adapter_seasons_name_text_view"
        android:layout_below="@+id/adapter_seasons_name_text_view"
        android:layout_marginTop="@dimen/text_view_top_spacing"
        android:includeFontPadding="false" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/review_item_bottom_spacing"
    android:layout_marginTop="@dimen/review_item_top_spacing"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adapter_review_name_text_view"
        style="@style/TextAppearance.Subheading.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false" />

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/adapter_review_content_text_view"
        style="@style/TextAppearance.Body1.PrimarySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_review_name_text_view"
        android:ellipsize="end"
        android:maxLines="3"
        app:animation_duration="500" />

</RelativeLayout>
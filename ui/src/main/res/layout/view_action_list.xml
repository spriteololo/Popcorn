<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/actions_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_colorNormal="@color/color_accent"
        fab:menu_colorPressed="@color/color_accent"
        fab:menu_fab_hide_animation="@anim/jump_to_down"
        fab:menu_fab_show_animation="@anim/jump_from_down"
        fab:menu_labels_colorNormal="@color/color_accent"
        fab:menu_labels_colorPressed="@color/color_accent"
        fab:menu_labels_hideAnimation="@anim/jump_to_down"
        fab:menu_labels_showAnimation="@anim/jump_from_down"
        fab:menu_labels_textColor="@color/color_text_primary">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/action_add_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_accent"
            app:fab_colorPressed="@color/color_accent"
            fab:fab_hideAnimation="@anim/jump_to_down"
            fab:fab_label="@string/list_add_movie"
            fab:fab_showAnimation="@anim/jump_from_down"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/action_delete_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_accent"
            app:fab_colorPressed="@color/color_accent"
            fab:fab_hideAnimation="@anim/jump_to_down"
            fab:fab_label="@string/list_delete"
            fab:fab_showAnimation="@anim/jump_from_down"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</merge>
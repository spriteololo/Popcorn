<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_skeleton_image_template"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@color/color_card_background" />

    <LinearLayout
        android:id="@+id/view_linear_layout"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_skeleton_image_template"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/color_card_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/color_card_background" />

    </LinearLayout>

    <View
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_card_background"
        app:layout_constraintStart_toEndOf="@+id/view_skeleton_image_template"
        app:layout_constraintTop_toBottomOf="@+id/view_linear_layout" />

</merge>
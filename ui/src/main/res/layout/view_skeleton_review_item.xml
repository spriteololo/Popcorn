<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/current_review_item_horizontal_spacing"
        android:layout_marginStart="@dimen/current_review_item_horizontal_spacing"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@color/color_card_background" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:background="@color/color_card_background" />

        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="230dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:background="@color/color_card_background" />

    </LinearLayout>

</merge>
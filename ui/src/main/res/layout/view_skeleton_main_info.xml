<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_skeleton_image_template"
        android:layout_width="82dp"
        android:layout_height="10dp"
        android:background="@color/color_card_background" />

    <View
        android:id="@+id/view_skeleton_vote_average_template"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:background="@color/color_card_background"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/liner_layout_skeleton"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_skeleton_image_template">

        <View
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/color_card_background" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/color_card_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/liner_layout_skeleton">

        <View
            android:layout_width="286dp"
            android:layout_height="10dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="310dp"
            android:layout_height="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="297dp"
            android:layout_height="10dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_card_background" />

    </LinearLayout>

</merge>
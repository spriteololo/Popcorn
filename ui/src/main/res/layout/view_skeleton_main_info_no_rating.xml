<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_skeleton_name_template"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:background="@color/color_card_background" />

    <LinearLayout
        android:id="@+id/view_skeleton_year_template"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_skeleton_name_template">

        <View
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/color_card_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_skeleton_year_template">

        <View
            android:layout_width="286dp"
            android:layout_height="10dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="310dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_card_background" />

        <View
            android:layout_width="296dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_card_background" />

    </LinearLayout>

</merge>